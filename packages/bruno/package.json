		"@vitest/coverage-v8": "3.1.2",
		"prettier": "^3.3.3",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"vite-tsconfig-paths": "^5.1.3",
		"vitest": "3.1.2"
	},
	"peerDependencies": {
		"graphql": "16.x"
	},
	"pnpm": {
		"overrides": {
			"graphql": "^16.9.0"
